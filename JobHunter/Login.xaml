<Window x:Class="JobHunter.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JobHunter"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="79,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="79,171,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblUsername" Content="Username:" HorizontalAlignment="Left" Margin="79,75,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblPassword" Content="Password:" HorizontalAlignment="Left" Margin="79,140,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="124,202,0,0" VerticalAlignment="Top" Width="75" Click="btnLogin_Click" FontFamily="Abel"/>

    </Grid>
</Window>
